{
	"parser": "typescript",
	"singleQuote": true,
	"useTabs": true,
	"semi": true,
	"printWidth": 150,
	"endOfLine": "lf",
	"trailingComma": "none",
	"bracketSpacing": true,
	"arrowParens": "always",
	"tabWidth": 2,
	"overrides": [
		{
			"files": ["*.json"],
			"options": {
				"parser": "json"
			}
		},
		{
			"files": ["*.js"],
			"options": {
				"parser": "typescript"
			}
		}
	]
}
